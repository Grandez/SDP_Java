<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>sdp</artifactId>
    <groupId>com.jgg</groupId>
    <version>5.0</version>
    <relativePath>../SDP/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.jgg.sdp</groupId>
  <artifactId>MODParserBase</artifactId>
  <name>Serendipity Parser Common Module</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.jgg.sdp</groupId>
      <artifactId>SDPBase</artifactId>
      <version>5.0</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>MODTools</artifactId>
          <groupId>com.jgg.sdp</groupId>
        </exclusion>
        <exclusion>
          <artifactId>MODCore</artifactId>
          <groupId>com.jgg.sdp</groupId>
        </exclusion>
        <exclusion>
          <artifactId>MODModule</artifactId>
          <groupId>com.jgg.sdp</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.jgg.sdp</groupId>
      <artifactId>SDPRules</artifactId>
      <version>5.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>

