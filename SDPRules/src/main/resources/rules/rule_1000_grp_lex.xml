<?xml version="1.0" encoding="UTF-8"?>
<r:SDPRules xmlns:r="http://www.sdp.com/SDPRules" 
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
            xsi:schemaLocation="http://www.sdp.com/SDPRules ../SDPRules.xsd ">

   <r:header>
      <title>Reglas lexicas</title>
      <replace>false</replace>
   </r:header>
   
   <r:group name="LEX">
      <idParent>0</idParent>
      <idGroup>10</idGroup>
      <prefix>LEX</prefix>
      <active>true</active>
      <r:description>
          <r:text lang="xx">Analisis lexico</r:text>      
      </r:description>
      
      <r:item name="TAB">
         <idItem>1</idItem>
         <active>true</active>
         <object>TAB</object>
         <r:description>
            <r:text lang="xx">No usar caracteres de tabulacion</r:text>
         </r:description>
         
         <r:rule>
            <idRule>1</idRule>
            <active>true</active>
            <priority>0</priority>
            <severity>2</severity>
            <r:description>
               <r:text lang="xx">No usar caracteres de tabulacion</r:text>
            </r:description>
            <condition negated="true">
               <objectType>word</objectType>
               <comparator>mandatory</comparator>
               <value>\t</value>
            </condition>            
         </r:rule>
      </r:item>

      <r:item name="HEX">
         <idItem>2</idItem>
         <active>true</active>
         <object>HEX</object>
            <r:description>
               <r:text lang="xx">Usar la codificacion hexadecimal para los caracteres no imprimibles</r:text>
            </r:description>
            
         <r:rule>
            <idRule>2</idRule>
            <active>true</active>
            <priority>0</priority>
            <severity>2</severity>
            <r:description>
               <r:text lang="xx">Usar la codificacion hexadecimal para los caracteres no imprimibles</r:text>
            </r:description>
            <condition negated="true">
               <objectType>word</objectType>
               <comparator>mandatory</comparator>
               <value>0x10</value>
            </condition>            
            <sample>
               <bad>
        01  NON-PRINTABLE.
            03 TAB-CODE    PIC X(01) VALUE '\t'.           
               </bad>
               <correct>
        01  NON-PRINTABLE.
            03 TAB-CODE    PIC X(01) VALUE X'05'.           
               </correct>

            </sample>
         </r:rule>         
      </r:item>
   </r:group>

</r:SDPRules>
