<?xml version="1.0" encoding="UTF-8"?>
<RULES xmlns="http://www.sdp.com/SDPRULES" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://www.sdp.com/SDPRULES SDPRULES.xsd ">

   <header>
      <title>Reglas lexicas / Caracteres</title>
      <replace>true</replace>
   </header>
   
   <group name="CHR">
      <idGroup>11</idGroup>
      <idParent>10</idParent>
      <prefix>CHR</prefix>
      <active>true</active>
      <description>
          <text lang="xx">Analisis lexico</text>      
      </description>
      
      <item>
         <idItem>1</</idItem>
         <active>true</active>
         <object>TAB</object>
         <description>
            <text lang="xx">No usar caracteres de tabulacion</text>
         </description>
         
         <rule>
            <idRule>1</idRule>
            <active>true</active>
            <priority>0</priority>
            <severity>2</severity>
            <description>
               <text lang="xx">No usar caracteres de tabulacion</text>
            </description>
            <condition negated=true>
               <objectType>word</objectType>
               <comparator>mandatory</comparator>
               <value>\t</value>
            </condition>            
         </rule>
      </item>

      <item>
         <idItem>2</</idItem>
         <active>true</active>
         <object>HEX</object>
            <description>
               <text lang="xx">Usar la codificacion hexadecimal para los caracteres no imprimibles</text>
            </description>
            
         <rule>
            <idRule>2</idRule>
            <active>true</active>
            <priority>0</priority>
            <severity>2</severity>
            <description>
               <text lang="xx">Usar la codificacion hexadecimal para los caracteres no imprimibles</text>
            </description>
            <condition negated=true>
               <objectType>word</objectType>
               <comparator>mandatory</comparator>
               <value>0x10</value>
            </condition>            
            <sample>
               <bad>
        01  NON-PRINTABLE.
            03 TAB-CODE    PIC X(01) VALUE '\t'.           
               </bad>
               <correct>
        01  NON-PRINTABLE.
            03 TAB-CODE    PIC X(01) VALUE X'05'.           
               </correct>

            </sample>
         </rule>         
      </item>
   </group>

</RULES>
